{
  "name": "brimmar/phpresult",
  "description": "A Rust-like Result Type for PHP",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": "^8.3"
  },
  "autoload": {
    "psr-4": {
      "Brimmar\\PhpResult\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Bryan",
      "email": "bryan.sergio@brimmar.dev"
    }
  ],
  "keywords": [
    "php",
    "result",
    "option",
    "monad",
    "functional",
    "error-handling"
  ],
  "support": {
    "issues": "https://github.com/brimmar/phpresult/issues",
    "source": "https://github.com/brimmar/phpresult"
  },
  "minimum-stability": "stable",
  "require-dev": {
    "pestphp/pest": "^4.0",
    "phpstan/phpstan": "^2.1",
    "laravel/pint": "^1.26"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "scripts": {
    "test": "vendor/bin/pest",
    "test:coverage": "vendor/bin/pest --coverage",
    "analyse": "vendor/bin/phpstan analyse",
    "format": "vendor/bin/pint"
  }
}